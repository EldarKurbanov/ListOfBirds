<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bird_image"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            android:contentDescription="@string/bird_image_description"
            android:minWidth="48dp"
            android:onClick="onPictureClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:id="@+id/bird_name"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bird_image" />

        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onPreviousClick"
            android:text="@string/button_previous"
            android:textColor="#424242"
            app:layout_constraintEnd_toStartOf="@+id/bird_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bird_image" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onNextClick"
            android:text="@string/button_next"
            android:textColor="#424242"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bird_name"
            app:layout_constraintTop_toBottomOf="@+id/bird_image" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onHelpClick"
            android:text="@string/button_help"
            android:textColor="#0277BD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next"
            app:layout_constraintStart_toEndOf="@+id/previous"
            app:layout_constraintTop_toBottomOf="@+id/bird_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>